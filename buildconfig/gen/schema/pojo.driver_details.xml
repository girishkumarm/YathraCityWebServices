<?xml version="1.0"?>
<schema package="com.yathraCity.core" name="Core Package">
	<Class name="DriverDetails"
		description="input pojo which describes all the required information of the driver"
		displayorder="0">

		<property name="driverName" type="String" description="driver ph number" />
		<property name="driverPhoneNumber" type="String"
			description="phone number of the driver" />
		<property name="driverLicence" type="String" description="licence of the driver" />
		<property name="agencyName" type="String"
			description="agency name to which the driver is linked with" />
		<property name="agencyPhoneNumber" type="String"
			description="phone number of agency" />
		<property name="location" type="String" description="location of the driver" />
		<property name="carType" type="String" description="car type" />
		<property name="carNumber" type="String" description="car number" />
	</Class>

	<Class name="ConfirmDriverAvailability"
		description="input pojo which describes all the required information of the driver to confirm his availability"
		displayorder="0">
		<property name="driverName" type="String" description="driver name" />
		<property name="driverPhoneNumber" type="String"
			description="phone number of the driver" />
		<property name="driverLicence" type="String" description="licence of the driver" />
		<property name="location" type="String" description="location of the driver" />
		<property name="carNumber" type="String" description="car number" />
		<property name="availability" type="Boolean"
			description="availability of the driver" />
		<property name="carType" type="String" description="car type" />
	</Class>

</schema>
	