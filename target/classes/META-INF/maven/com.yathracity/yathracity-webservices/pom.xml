			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>1</id>
						<phase>install</phase>
						<configuration>
							<target>
								<property name="runtime_classpath" refid="maven.runtime.classpath" />
								<property name="test_classpath" refid="maven.test.classpath" />
								<property name="plugin_classpath" refid="maven.plugin.classpath" />
							</target>
							<tasks>
								<property name="warname" value="ws" />
								<property name="serverType" value="inblox_${env.type}" />
								<property name="buildEnv" value="${env.type}" />
								<property name="env.RZTUSER" value="dev" />
								<property name="env.DEST_WAR_PATH" value="${env.warDestination}" />

								<ant antfile="${basedir}/buildconfig/build/build.xml"
									target="shortbuild" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>2</id>
						<phase>clean</phase>
						<configuration>
							<target>
								<mkdir dir="${basedir}/modules/lib" />
								<mkdir dir="${basedir}/buildconfig/out/hbm" />
								<echo message="Cleaning old dependencies from ${basedir}/modules/lib/" />
								<delete>
									<fileset dir="${basedir}/modules/lib/">
										<include name="*" />
									</fileset>
								</delete>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<outputDirectory>${basedir}/modules/lib/</outputDirectory>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.sun</groupId>
						<artifactId>tools</artifactId>
						<version>1.7</version>
						<scope>system</scope>
						<systemPath>${java.home}/../lib/tools.jar</systemPath>
					</dependency>
				</dependencies>

			</plugin>
		</plugins>
	</build>
